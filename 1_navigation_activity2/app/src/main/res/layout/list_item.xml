<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".RecyclerView"
android:padding="5dp">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="384dp"
            android:layout_height="23dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp">
        <TextView
                android:text="TextView"
                android:layout_width="144dp"
                android:layout_height="match_parent" android:id="@+id/movieName"
                tools:layout_editor_absoluteY="92dp" tools:layout_editor_absoluteX="15dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="144dp"
                android:layout_height="match_parent" android:id="@+id/writer"
                tools:layout_editor_absoluteY="92dp" tools:layout_editor_absoluteX="254dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="93dp"
                android:layout_height="match_parent" android:id="@+id/releaseDate"
                tools:layout_editor_absoluteY="92dp" tools:layout_editor_absoluteX="176dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>