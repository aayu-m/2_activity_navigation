<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity3">

    <Button
            android:text="Go Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/goHome"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="172dp"/>
    <Button
            android:text="Go To Second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/goToSecond"
            app:layout_constraintEnd_toEndOf="@+id/goToRecyclerView"
            app:layout_constraintStart_toStartOf="@+id/goToRecyclerView" app:layout_constraintHorizontal_bias="0.423"
            app:layout_constraintBottom_toTopOf="@+id/goToRecyclerView" android:layout_marginBottom="20dp"/>
    <TextView
            android:text="Wecome to Third page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/goToSecond" app:layout_constraintStart_toStartOf="@+id/goToSecond"
            app:layout_constraintBottom_toTopOf="@+id/goToSecond" android:layout_marginBottom="60dp"
            android:textSize="20sp" android:textColor="#025A25" android:textStyle="bold"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/navigate_activity3" android:textColor="#044C10"
            android:textSize="24sp" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="20dp"/>
    <Button
            android:text="Go to recycler view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/goToRecyclerView"
            app:layout_constraintEnd_toEndOf="@+id/goHome" app:layout_constraintStart_toStartOf="@+id/goHome"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBottom_toTopOf="@+id/goHome"
            android:layout_marginBottom="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>