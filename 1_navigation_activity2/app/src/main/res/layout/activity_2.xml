<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity2">

    <Button
            android:text="Go to Third Page"
            android:id="@+id/secondToThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="274dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="111dp"
    />
    <Button
            android:text="Go Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/goBack"
            app:layout_constraintEnd_toEndOf="@+id/secondToThird"
            app:layout_constraintStart_toStartOf="@+id/secondToThird"
            app:layout_constraintBottom_toTopOf="@+id/secondToThird" android:layout_marginBottom="60dp"/>
    <TextView
            android:text="Welcome to Second page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/goBack" app:layout_constraintStart_toStartOf="@+id/goBack"
            app:layout_constraintBottom_toTopOf="@+id/goBack" android:layout_marginBottom="60dp"
            android:textSize="20sp" android:textColor="#025C1C" android:textAlignment="viewStart"
            android:textStyle="bold"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/navigate_activity2" android:textColor="#044C10"
            android:textSize="24sp" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>